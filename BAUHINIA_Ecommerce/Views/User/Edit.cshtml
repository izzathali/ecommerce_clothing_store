@using Ecommerce.Model
@model UserM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Staff/</span> Create</h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Update Staff</h5>
                        <small class="text-muted float-end">Update</small>
                    </div>

                    <div class="card-body mb-3">
                        <div class="row">
                            <div class="col-md-6  ">

                                <form asp-action="Edit">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="UserId" />
                                    <div class="form-group">
                                        <label asp-for="FirstName" class="control-label"></label>
                                        <span asp-validation-for="FirstName" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-barcode"></i>
                                            </span>
                                            <input asp-for="FirstName" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="LastName" class="control-label"></label>
                                        <span asp-validation-for="LastName" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-barcode"></i>
                                            </span>
                                            <input asp-for="LastName" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Username" class="control-label"></label>
                                        <span asp-validation-for="Username" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-barcode"></i>
                                            </span>
                                            <input asp-for="Username" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Password" class="control-label"></label>
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-barcode"></i>
                                            </span>
                                            <input asp-for="Password" class="form-control" />
                                        </div>

                                    </div>
                                    <div class="form-group">
                                        <label asp-for="UserType" class="control-label"></label>
                                        <span asp-validation-for="UserType" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-barcode"></i>
                                            </span>
                                            @*<input asp-for="UserType" class="form-control" />*@
                                            <select asp-for="UserType" class="form-control" asp-items="ViewBag.UserType"></select>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="AccessLevel" class="control-label"></label>

                                        <span asp-validation-for="AccessLevel" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-barcode"></i>
                                            </span>
                                            @*<input asp-for="AccessLevel" class="form-control" />*@
                                            <select asp-for="AccessLevel" class="form-control" asp-items="ViewBag.AccessType"></select>
                                        </div>
                                    </div>

                                    <div class="form-group mt-3">

                                        <button type="submit" value="Create" class="btn btn-primary">
                                            <span class="tf-icons bx bxs-save"></span>&nbsp; Save
                                        </button>
                                        <button asp-action="Index" type="submit" formnovalidate class="btn btn-secondary">
                                            <span class="tf-icons bx bx-list-ul"></span>&nbsp; View List
                                        </button>
                                    </div>


                                </form>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
                        }
