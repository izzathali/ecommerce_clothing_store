@using Ecommerce.Model
@model OrderM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";

    List<OrderLineItemM> orderLineItems = ViewBag.OrderLineItems as List<OrderLineItemM>;

}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Report /</span> Requested Order </h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Order Details</h5>
                        <small class="text-muted float-end">Report</small>
                    </div>

                    <div class="card-body pt-3" style="background-color:#d3d3d329;">
                        <div class="row">
                            <div class="col-md-12 col-xl-12">
                                <dl class="row">
                                    <dt class="col-md-1">
                                        Order No :
                                    </dt>
                                    <dd class="col-md-2">
                                        #@Html.DisplayFor(model => model.OrderId)
                                    </dd>
                                </dl>
                                <dl class="row">
                                    <dt class="col-md-1">
                                        @Html.DisplayNameFor(model => model.OrderDate) :
                                    </dt>
                                    <dd class="col-md-2">
                                        @Html.DisplayFor(model => model.OrderDate)
                                    </dd>
                                    <dt class="col-md-1">
                                        Customer :
                                    </dt>
                                    <dd class="col-md-2">
                                        @Html.DisplayFor(model => model.customer.CustomerName)
                                    </dd>
                                    <dt class="col-md-1">
                                        @Html.DisplayNameFor(model => model.customer.Email) :
                                    </dt>
                                    <dd class="col-md-2">
                                        @Html.DisplayFor(model => model.customer.Email)
                                    </dd>
                                    <dt class="col-md-1">
                                        @Html.DisplayNameFor(model => model.customer.PhoneNo1) :
                                    </dt>
                                    <dd class="col-md-2">
                                        @Html.DisplayFor(model => model.customer.PhoneNo1)
                                    </dd>
                                </dl>
                                <dl class="row">
                                    <dt class="col-md-1">
                                        @Html.DisplayNameFor(model => model.customer.PhoneNo2) :
                                    </dt>
                                    <dd class="col-md-2">
                                        @Html.DisplayFor(model => model.customer.PhoneNo2)
                                    </dd>
                                    <dt class="col-md-1">
                                        Address :
                                    </dt>
                                    <dd class="col-md-8">
                                        @Html.DisplayFor(model => model.customer.DeliveryAddress)
                                    </dd>

                                </dl>

                            </div>
                        </div>
                    </div>

                    <div class="card-body mb-3">
                        <div class="table-responsive text-nowrap ">
                            <table class="table mb-4">
                                <thead>
                                    <tr>
                                        <th>
                                            Product Code
                                        </th>
                                        <th>
                                            Product
                                        </th>
                                        <th>
                                            Image
                                        </th>

                                        <th>
                                            Price
                                        </th>
                                        <th>
                                            Qty
                                        </th>
                                        <th>
                                            Total
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (orderLineItems != null)
                                    {
                                        @foreach (OrderLineItemM item in orderLineItems)
                                        {
                                            <tr>

                                                <td>
                                                    @item.product.ProductCode
                                                </td>
                                                <td>
                                                    @item.product.ProductName
                                                </td>
                                                <td>
                                                    <div class="avatar">
                                                        @if (string.IsNullOrEmpty(@item.product.ProductPicUrl))
                                                        {
                                                            <img src="@("~/ProductImg/default.jpg")" asp-append-version="true" alt="Avatar" class="rounded-circle" />
                                                        }
                                                        else
                                                        {
                                                            <img src="@("~/ProductImg/"+ @item.product.ProductPicUrl)" asp-append-version="true" alt="Avatar" class="rounded-circle" />
                                                        }
                                                    </div>

                                                </td>

                                                <td>
                                                    @item.ProductPrice
                                                </td>
                                                <td>
                                                    @item.Quantity
                                                </td>
                                                <td>
                                                    @item.Total
                                                </td>
                                            </tr>
                                        }

                                        <tr style="border-top:solid;border-top-width:2px;">
                                            <td>

                                            </td>
                                            <td>

                                            </td>
                                            <td>

                                            </td>
                                            <td>

                                            </td>
                                            <td>
                                                @Model.NoOfProducts
                                            </td>
                                            <td>
                                                @Model.TotalAmount
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>


                            <a asp-action="Index" type="submit" formnovalidate class="btn btn-secondary mb-4">
                                <span class="tf-icons bx bx-list-ul"></span>&nbsp; View List
                            </a>
                        </div>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
</div>
