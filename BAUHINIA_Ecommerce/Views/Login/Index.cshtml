@using Ecommerce.Model
@model UserM
@{
    ViewData["Title"] = "Login";
    Layout = null;
    string InvalidUser = ViewBag.InvalidLogin;
}

<!DOCTYPE html>
<html lang="en"
      class="light-style customizer-hide"
      dir="ltr"
      data-theme="theme-default"
      data-template="vertical-menu-template-free">

<head>
    <meta charset="utf-8" />
    <meta name="viewport"
          content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0" />
           <title>@ViewData["Title"] | BAUHINIA </title>

    <meta name="description" content="" />

    <link rel="icon" type="image/x-icon" href="~/assets/be/img/favicon/faviconb.ico" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;1,300;1,400;1,500;1,600;1,700&display=swap"
          rel="stylesheet" />

    <link rel="stylesheet" href="~/assets/be/vendor/fonts/boxicons.css" />

    <link rel="stylesheet" href="~/assets/be/vendor/css/core.css" class="template-customizer-core-css" />
    <link rel="stylesheet" href="~/assets/be/vendor/css/theme-default.css" class="template-customizer-theme-css" />
    <link rel="stylesheet" href="~/assets/be/css/demo.css" />

    <link rel="stylesheet" href="~/assets/be/vendor/libs/perfect-scrollbar/perfect-scrollbar.css" />

    <link rel="stylesheet" href="~/assets/be/vendor/css/pages/page-auth.css" />
    <script src="~/assets/be/vendor/js/helpers.js"></script>

    <script src="~/assets/be/js/config.js"></script>
</head>

<body>


    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y">
            <div class="authentication-inner">
                <!-- Register -->
                <div class="card">
                    <div class="card-body">
                        <!-- Logo -->
                        <div class="app-brand justify-content-center">
                            <a href="#" class="app-brand-link gap-2">
                                <span class="app-brand-text demo text-body fw-bolder ">
                                    <img src="~/assets//be/img/logo/logo.png" style="max-width:300px;" class="logo" />
                                </span>
                            </a>
                        </div>
                        <!-- /Logo -->
                        <h4 class="mb-2">Welcome to Bauhinia! 👋</h4>
                        <p class="mb-4">Please sign-in to your account and manage the ecommerce</p>

                        <form asp-action="Index" class="mb-3">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @if (!string.IsNullOrEmpty(@InvalidUser))
                            {
                                <div class="m-t-0 m-b-0 how-pos4-parent">
                                    <label class="control-label text-danger text-center"> @InvalidUser </label>
                                </div>
                            }

                            <div class="mb-3">
                                <label for="email" class="form-label">Email or Username</label>
                                <span asp-validation-for="Username" class="text-danger"></span>
                                <input asp-for="Username" type="text"
                                       class="form-control"
                                       placeholder="Enter your email or username" required
                                       autofocus />
                            </div>
                            <div class="mb-3 form-password-toggle">
                                <div class="d-flex justify-content-between">
                                    <label class="form-label" for="password">Password</label>
                                    <span asp-validation-for="Password" class="text-danger"></span>

                                </div>
                                <div class="input-group input-group-merge">
                                    <input asp-for="Password" type="password"
                                           class="form-control"
                                           placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                                           aria-describedby="password" required />
                                    <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
                                </div>
                            </div>
                            <br />
                            <div class="mb-3">
                                <button class="btn btn-primary d-grid w-100" type="submit">Sign in</button>
                            </div>
                        </form>
                        <p class="text-center">
                            <span>New on our platform?</span>
                            <a asp-action="Register" >
                                <span>Create an account</span>
                            </a>
                        </p>

                    </div>
                </div>
            </div>
        </div>
    </div>



    <script src="~/assets/be/vendor/libs/jquery/jquery.js"></script>
    <script src="~/assets/be/vendor/libs/popper/popper.js"></script>
    <script src="~/assets/be/vendor/js/bootstrap.js"></script>
    <script src="~/assets/be/vendor/libs/perfect-scrollbar/perfect-scrollbar.js"></script>
    <script src="~/assets/be/vendor/js/menu.js"></script>
    <script src="~/assets/be/js/main.js"></script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
</body>

</html>
