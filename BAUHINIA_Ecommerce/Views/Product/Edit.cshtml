@using Ecommerce.Model
@model ProductM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<style>
    .form-group {
        margin-bottom: 0.9rem !important;
    }
</style>

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Product/</span> Edit    </h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Update Product</h5>
                        <small class="text-muted float-end">Update</small>
                    </div>

                    <div class="card-body mb-3">

                        <form asp-action="Edit" enctype="multipart/form-data">

                            <div class="row">
                                <div class="col-md-6 col-xl-6">

                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <input type="hidden" asp-for="ProductId" />

                                    <div class="form-group">
                                        <label asp-for="ProductCode" class="control-label"></label>
                                        <span asp-validation-for="ProductCode" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-barcode"></i>
                                            </span>
                                            <input asp-for="ProductCode" type="text"
                                                   class="form-control"
                                                   placeholder="Prodcut Code" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ProductName" class="control-label"></label>
                                        <span asp-validation-for="ProductName" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-store"></i>
                                            </span>
                                            <input asp-for="ProductName" type="text"
                                                   class="form-control"
                                                   placeholder="Product Name" />
                                        </div>

                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ProductDescription" class="control-label"></label>
                                        <span asp-validation-for="ProductDescription" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-notepad"></i>
                                            </span>
                                            <textarea asp-for="ProductDescription" type="text"
                                                      class="form-control"
                                                      placeholder="Description"></textarea>
                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <label asp-for="category.CategoryName" class="control-label"></label>
                                        <span asp-validation-for="CategoryId" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-category"></i>
                                            </span>
                                            <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                                        </div>


                                    </div>

                                    <div class="form-group">
                                        <label asp-for="ProductPrice" class="control-label"></label>
                                        <span asp-validation-for="ProductPrice" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-purchase-tag"></i>
                                            </span>

                                            <input asp-for="ProductPrice" type="number"
                                                   class="form-control"
                                                   placeholder="Product Price" />

                                        </div>
                                    </div>


                                    <div class="form-group">
                                        <input type="hidden" asp-for="ProductPicUrl" class="form-control" />

                                        <label asp-for="ProductPicFile" class="control-label"></label>
                                        <span asp-validation-for="ProductPicFile" class="text-danger"></span>

                                        <input asp-for="ProductPicFile" accept="image/*" class="form-control" />
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="Quantity" class="control-label"></label>
                                        <span asp-validation-for="Quantity" class="text-danger"></span>

                                        <div class="input-group input-group-merge">
                                            <span id="basic-icon-default-fullname2" class="input-group-text">
                                                <i class="bx bx-cube"></i>
                                            </span>

                                            <input asp-for="Quantity" type="number"
                                                   class="form-control"
                                                   placeholder="Quantity" />


                                        </div>
                                    </div>



                                </div>

                                <div class="col-md-6 col-xl-6">
                                    <div class="col-md-9">

                                        <div class="form-group">

                                            @if (string.IsNullOrEmpty(Model.ProductPicUrl))
                                            {
                                                <img src="@("~/ProductImg/default.jpg")" asp-append-version="true" width="100%" />
                                            }
                                            else
                                            {
                                                <img src="@("~/ProductImg/"+ Model.ProductPicUrl)" asp-append-version="true" width="100%" />
                                            }
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">

                                    <div class="form-group">
                                        <button type="submit" value="Create" class="btn btn-primary">
                                            <span class="tf-icons bx bxs-save"></span>&nbsp; Save
                                        </button>
                                        <button asp-action="Index" type="submit" formnovalidate class="btn btn-secondary">
                                            <span class="tf-icons bx bx-list-ul"></span>&nbsp; View List
                                        </button>
                                    </div>

                                </div>
                            </div>


                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
