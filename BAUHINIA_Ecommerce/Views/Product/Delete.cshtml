@using Ecommerce.Model
@model ProductM

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Category/</span> Delete</h4>

        <!-- Basic Layout -->
        <div class="row">
            <div class="col-xl">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Are you sure you want to delete this? </h5>
                        <small class="text-muted float-end">Delete</small>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 col-xl-6">

                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        @Html.DisplayNameFor(model => model.ProductCode)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.DisplayFor(model => model.ProductCode)
                                    </div>

                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        @Html.DisplayFor(model => model.ProductName)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.DisplayFor(model => model.ProductName)
                                    </div>

                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        @Html.DisplayNameFor(model => model.ProductDescription)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.DisplayFor(model => model.ProductDescription)
                                    </div>

                                </div>

                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        @Html.DisplayNameFor(model => model.category)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.DisplayFor(model => model.category.CategoryName)
                                    </div>

                                </div>


                                <div class="row mb-3">
                                    <div class="col-md-4">
                                        @Html.DisplayNameFor(model => model.ProductPrice)
                                    </div>
                                    <div class="col-md-8">
                                        @Html.DisplayFor(model => model.ProductPrice)
                                    </div>

                                </div>



                            </div>

                            <div class="col-md-6 col-xl-6">
                                <div class="form-group">

                                    @if (string.IsNullOrEmpty(Model.ProductPicUrl))
                                    {
                                        <img src="@("~/ProductImg/default.jpg")" asp-append-version="true" width="100%" />
                                    }
                                    else
                                    {
                                        <img src="@("~/ProductImg/"+ Model.ProductPicUrl)" asp-append-version="true" width="100%" />
                                    }
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            <form asp-action="Delete">
                                <input type="hidden" asp-for="ProductId" />

                                <button type="submit" class="btn btn-danger">
                                    <span class="tf-icons bx bx-trash"></span>&nbsp; Delete
                                </button>

                                <button asp-action="Index" formnovalidate class="btn btn-secondary">
                                    <span class="tf-icons bx bx-list-ul"></span>&nbsp; View List
                                </button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
