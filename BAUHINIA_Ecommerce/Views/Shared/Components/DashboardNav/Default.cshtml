@using Ecommerce.Model
@model UserM

<ul class="navbar-nav flex-row align-items-center ms-auto">
    <!-- Place this tag where you want the button to render. -->
    <li class="nav-item lh-1 me-3">
        @if (@Model != null && !(string.IsNullOrEmpty(@Model.LastName)))
        {
            <a>
                @Model.FirstName <span> </span>@Model.LastName
            </a>
        }
    </li>

    <!-- User -->
    <li class="nav-item navbar-dropdown dropdown-user dropdown">
        <a class="nav-link dropdown-toggle hide-arrow" href="javascript:void(0);" data-bs-toggle="dropdown">
            <div class="avatar avatar-online">
                @*<img src="~/assets/be/img/avatars/user-default.png" alt class="w-px-40 h-auto rounded-circle" />*@
                <img src="~/assets/be/img/avatars/7.png" alt class="w-px-40 h-auto rounded-circle" />
            </div>
        </a>
        <ul class="dropdown-menu dropdown-menu-end">
            <li>
                <a class="dropdown-item" href="#">
                    <div class="d-flex">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar avatar-online">
                                <img src="~/assets/be/img/avatars/7.png" class="w-px-40 h-auto rounded-circle" />
                            </div>
                        </div>
                        @if (@Model != null && !(string.IsNullOrEmpty(@Model.LastName)))
                        {
                            <div class="flex-grow-1">
                                <span class="fw-semibold d-block">
                                    @Model.FirstName <span> </span> @Model.LastName

                                </span>
                                <small class="text-muted">@Model.UserType</small>
                            </div>

                        }
                    </div>
                </a>
            </li>

            <li>
                <div class="dropdown-divider"></div>
            </li>
            <li>
                <a class="dropdown-item" href="#">
                    <i class="bx bx-user me-2"></i>
                    <span class="align-middle">My Profile</span>
                </a>
            </li>
            <li>
                <a class="dropdown-item" href="#">
                    <i class="bx bx-cog me-2"></i>
                    <span class="align-middle">Settings</span>
                </a>
            </li>
            <li>
                <div class="dropdown-divider"></div>
            </li>
            <li>
                <a asp-area="" asp-controller="Login" asp-action="Index" class="dropdown-item">
                    <i class="bx bx-power-off me-2"></i>
                    <span class="align-middle">Log Out</span>
                </a>
            </li>
        </ul>
    </li>
    <!--/ User -->
</ul>


